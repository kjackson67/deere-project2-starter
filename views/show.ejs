      <input type="submit" value="Delete" />
    </form>
    <a href="/course/<%= course.id %>/edit">Edit</a>
    <br /><br />
    <h3>Users using this course</h3>
    <% for (let i = 0; i < course.Users.length; i++){ %>
      <li>
         <%= course.Users[i].name %></a>
      </li>
      <br>
<% } %>
  </body>
</html>